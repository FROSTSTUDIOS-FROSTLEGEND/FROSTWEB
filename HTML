const button = document.getElementById('magic-button');
const text = document.getElementById('magic-text');
const body = document.body;
const particlesContainer = document.getElementById('particles');

// Particle creation function
function createParticle(type) {
    const particle = document.createElement('div');
    particle.classList.add('particle');

    // Random size and position
    const size = Math.random() * 10 + 5; // 5px to 15px
    particle.style.width = size + 'px';
    particle.style.height = size + 'px';
    particle.style.position = 'absolute';
    particle.style.left = Math.random() * 100 + '%';
    particle.style.top = '50%';
    particle.style.borderRadius = '50%';
    particle.style.opacity = 1;

    if(type === 'fire') {
        particle.style.background = 'orange';
    } else {
        particle.style.background = 'cyan';
    }

    particlesContainer.appendChild(particle);

    // Animate particle upwards and fade out
    let pos = 50;
    let opacity = 1;
    const interval = setInterval(() => {
        pos -= 1 + Math.random() * 2;
        opacity -= 0.02;
        particle.style.top = pos + '%';
        particle.style.opacity = opacity;
        if(opacity <= 0) {
            particle.remove();
            clearInterval(interval);
        }
    }, 16);
}

// Button click effect
button.addEventListener('click', () => {
    text.innerHTML = "ğŸ”¥â„ï¸ Magic Unleashed! â„ï¸ğŸ”¥";
    body.style.background = "linear-gradient(to bottom, #0033ff, #ff3300)";

    // Spawn multiple particles
    for(let i = 0; i < 30; i++) {
        createParticle('fire');
        createParticle('ice');
    }
});
